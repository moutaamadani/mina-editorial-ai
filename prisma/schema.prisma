generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CustomerCredit {
  customerId String   @id @map("customer_id")
  balance    Int
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("customer_credits")
}

model AutoTopupSetting {
  customerId        String   @id @map("customer_id")
  enabled           Boolean
  monthlyLimitPacks Int      @map("monthly_limit_packs")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("auto_topup_settings")
}

model Session {
  id         String   @id
  customerId String   @map("customer_id")
  platform   String
  title      String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @updatedAt @map("updated_at")

  generations Generation[]
  feedbacks   Feedback[]

  @@index([customerId, createdAt])
  @@map("sessions")
}

model Generation {
  id         String   @id
  type       String
  sessionId  String?  @map("session_id")
  session    Session? @relation(fields: [sessionId], references: [id])
  customerId String   @map("customer_id")
  platform   String
  prompt     String
  outputUrl  String   @map("output_url")
  meta       Json?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @updatedAt @map("updated_at")

  feedbacks  Feedback[]

  @@index([customerId, createdAt])
  @@map("generations")
}

model Feedback {
  id           String      @id
  sessionId    String?     @map("session_id")
  session      Session?    @relation(fields: [sessionId], references: [id])
  generationId String?     @map("generation_id")
  generation   Generation? @relation(fields: [generationId], references: [id])
  customerId   String      @map("customer_id")
  resultType   String      @map("result_type")
  platform     String
  prompt       String
  comment      String
  imageUrl     String?     @map("image_url")
  videoUrl     String?     @map("video_url")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @default(now()) @updatedAt @map("updated_at")

  @@index([customerId, createdAt])
  @@map("feedbacks")
}
